<% if (session.hasOwnProperty('notification') 
  && session.notification.type == 'alert') { %>
<div class="alert alert-<%=session.notification.role%>" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <%= session.notification.text %>
</div>
<% } %>
<% delete session.notification; %>

